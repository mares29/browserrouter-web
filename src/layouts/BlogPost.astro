---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  date: Date;
  description: string;
}

const { title, date, description } = Astro.props;

const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});

// Calculate reading time (rough estimate)
const wordsPerMinute = 200;
---

<BaseLayout title={`${title} – BrowserRouter`} description={description}>
  <Header />

  <article class="blog-post">
    <header class="post-header">
      <a href="/blog" class="back-link">
        <span class="back-arrow">←</span>
        <span class="back-text">Blog</span>
      </a>

      <div class="post-meta-top">
        <time datetime={date.toISOString()}>{formattedDate}</time>
      </div>

      <h1>{title}</h1>

      <div class="header-rule"></div>
    </header>

    <div class="post-content">
      <slot />
    </div>

    <footer class="post-footer">
      <div class="footer-rule"></div>
      <div class="post-end-mark">◯</div>
      <a href="/blog" class="read-more-link">
        <span>More articles</span>
        <span class="arrow">→</span>
      </a>
    </footer>
  </article>

  <Footer />
</BaseLayout>

<style>
  .blog-post {
    max-width: 680px;
    margin: 0 auto;
    padding: 10rem 2rem 6rem;
    animation: fadeIn 0.8s ease-out;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Header */
  .post-header {
    margin-bottom: 4rem;
    animation: fadeIn 0.8s ease-out 0.1s both;
  }

  .back-link {
    font-size: 0.75rem;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--ink-faint);
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 3rem;
    transition: color 0.3s, gap 0.3s;
  }

  .back-link:hover {
    color: var(--ink);
    gap: 0.75rem;
  }

  .back-arrow {
    transition: transform 0.3s;
  }

  .back-link:hover .back-arrow {
    transform: translateX(-3px);
  }

  .post-meta-top {
    margin-bottom: 1.5rem;
  }

  .post-meta-top time {
    font-family: 'Cormorant Garamond', serif;
    font-size: 0.9rem;
    font-style: italic;
    color: var(--ink-faint);
    letter-spacing: 0.05em;
  }

  h1 {
    font-family: 'Cormorant Garamond', serif;
    font-size: clamp(2.2rem, 5vw, 3.2rem);
    font-weight: 300;
    letter-spacing: -0.01em;
    line-height: 1.15;
    margin-bottom: 2rem;
    color: var(--ink);
  }

  .header-rule {
    width: 60px;
    height: 1px;
    background: var(--accent);
    opacity: 0.6;
  }

  /* Content */
  .post-content {
    font-size: 1.1rem;
    line-height: 1.85;
    color: var(--ink-light);
    animation: fadeIn 0.8s ease-out 0.2s both;
  }

  /* Headings */
  .post-content :global(h2) {
    font-family: 'Cormorant Garamond', serif;
    font-size: 1.6rem;
    font-weight: 400;
    color: var(--ink);
    margin: 4rem 0 1.5rem;
    position: relative;
    padding-left: 1rem;
  }

  .post-content :global(h2)::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0.2em;
    bottom: 0.2em;
    width: 2px;
    background: var(--accent);
    opacity: 0.5;
  }

  .post-content :global(h3) {
    font-family: 'Cormorant Garamond', serif;
    font-size: 1.25rem;
    font-weight: 500;
    font-style: italic;
    color: var(--ink);
    margin: 2.5rem 0 1rem;
  }

  .post-content :global(h4) {
    font-size: 0.9rem;
    font-weight: 400;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--ink);
    margin: 2rem 0 1rem;
  }

  /* Paragraphs */
  .post-content :global(p) {
    margin-bottom: 1.6rem;
  }

  /* First paragraph - drop cap effect via larger text */
  .post-content :global(p:first-of-type) {
    font-size: 1.2rem;
    line-height: 1.8;
    color: var(--ink);
  }

  /* Links */
  .post-content :global(a) {
    color: var(--ink);
    text-decoration: none;
    background-image: linear-gradient(var(--accent), var(--accent));
    background-size: 100% 1px;
    background-position: 0 100%;
    background-repeat: no-repeat;
    transition: background-size 0.3s, color 0.3s;
  }

  .post-content :global(a:hover) {
    background-size: 100% 2px;
    color: var(--accent);
  }

  /* Strong/Bold */
  .post-content :global(strong) {
    font-weight: 400;
    color: var(--ink);
  }

  /* Emphasis */
  .post-content :global(em) {
    font-style: italic;
    color: var(--ink);
  }

  /* Blockquotes */
  .post-content :global(blockquote) {
    border-left: none;
    padding: 2rem 0 2rem 2rem;
    margin: 2.5rem 0;
    position: relative;
    font-family: 'Cormorant Garamond', serif;
    font-size: 1.3rem;
    font-style: italic;
    line-height: 1.6;
    color: var(--ink);
  }

  .post-content :global(blockquote)::before {
    content: '"';
    position: absolute;
    left: 0;
    top: 0.5rem;
    font-family: 'Cormorant Garamond', serif;
    font-size: 4rem;
    line-height: 1;
    color: var(--accent);
    opacity: 0.3;
  }

  .post-content :global(blockquote p) {
    margin-bottom: 0;
  }

  /* Lists */
  .post-content :global(ul),
  .post-content :global(ol) {
    margin: 1.5rem 0;
    padding-left: 0;
    list-style: none;
  }

  .post-content :global(li) {
    margin-bottom: 0.75rem;
    padding-left: 1.5rem;
    position: relative;
  }

  .post-content :global(ul li)::before {
    content: '—';
    position: absolute;
    left: 0;
    color: var(--accent);
    opacity: 0.6;
  }

  .post-content :global(ol) {
    counter-reset: list-counter;
  }

  .post-content :global(ol li) {
    counter-increment: list-counter;
    padding-left: 2rem;
  }

  .post-content :global(ol li)::before {
    content: counter(list-counter);
    position: absolute;
    left: 0;
    font-family: 'Cormorant Garamond', serif;
    font-size: 0.9rem;
    color: var(--accent);
    font-style: italic;
  }

  /* Code inline */
  .post-content :global(code) {
    font-family: 'SF Mono', 'Monaco', 'Consolas', monospace;
    font-size: 0.85em;
    background: var(--cream);
    padding: 0.15em 0.4em;
    border-radius: 3px;
    color: var(--ink);
  }

  /* Code blocks */
  .post-content :global(pre) {
    background: var(--code-bg);
    color: var(--code-text);
    padding: 1.5rem 2rem;
    margin: 2rem 0;
    overflow-x: auto;
    font-family: 'SF Mono', 'Monaco', 'Consolas', monospace;
    font-size: 0.85rem;
    line-height: 1.7;
    border-radius: 0;
    position: relative;
  }

  .post-content :global(pre)::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 3px;
    background: var(--accent);
    opacity: 0.4;
  }

  .post-content :global(pre code) {
    background: none;
    padding: 0;
    font-size: inherit;
    color: inherit;
  }

  /* Horizontal rules */
  .post-content :global(hr) {
    border: none;
    height: 1px;
    background: var(--stone);
    margin: 3rem auto;
    width: 100px;
  }

  /* Images */
  .post-content :global(img) {
    max-width: 100%;
    height: auto;
    margin: 2rem 0;
  }

  /* Post Footer */
  .post-footer {
    margin-top: 5rem;
    text-align: center;
    animation: fadeIn 0.8s ease-out 0.3s both;
  }

  .footer-rule {
    width: 100px;
    height: 1px;
    background: var(--stone);
    margin: 0 auto 2rem;
  }

  .post-end-mark {
    font-size: 1.5rem;
    color: var(--ink-faint);
    opacity: 0.4;
    margin-bottom: 2rem;
  }

  .read-more-link {
    font-size: 0.75rem;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--ink-light);
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    transition: color 0.3s, gap 0.3s;
  }

  .read-more-link:hover {
    color: var(--ink);
    gap: 0.75rem;
  }

  .read-more-link .arrow {
    transition: transform 0.3s;
  }

  .read-more-link:hover .arrow {
    transform: translateX(3px);
  }

  /* Responsive */
  @media (max-width: 680px) {
    .blog-post {
      padding: 8rem 1.5rem 4rem;
    }

    h1 {
      font-size: clamp(1.8rem, 6vw, 2.4rem);
    }

    .post-content {
      font-size: 1.05rem;
    }

    .post-content :global(h2) {
      font-size: 1.4rem;
    }

    .post-content :global(blockquote) {
      padding-left: 1.5rem;
      font-size: 1.15rem;
    }

    .post-content :global(blockquote)::before {
      font-size: 3rem;
    }
  }

  @media (max-width: 480px) {
    .blog-post {
      padding: 6rem 1.25rem 3rem;
    }

    .back-link {
      margin-bottom: 2rem;
    }

    h1 {
      font-size: 1.6rem;
      line-height: 1.25;
    }

    .post-content {
      font-size: 1rem;
      line-height: 1.8;
    }

    .post-content :global(h2) {
      font-size: 1.3rem;
      margin: 3rem 0 1rem;
    }

    .post-content :global(pre) {
      padding: 1rem 1.25rem;
      margin: 1.5rem -1.25rem;
      border-radius: 0;
    }
  }
</style>
