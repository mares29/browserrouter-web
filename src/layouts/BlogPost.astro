---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  date: Date;
  description: string;
}

const { title, date, description } = Astro.props;

const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<BaseLayout title={`${title} – BrowserRouter`} description={description}>
  <Header />

  <article class="blog-post">
    <header class="post-header">
      <a href="/blog" class="back-link">← Blog</a>
      <time datetime={date.toISOString()}>{formattedDate}</time>
      <h1>{title}</h1>
    </header>

    <div class="post-content">
      <slot />
    </div>

    <footer class="post-footer">
      <div class="end-mark">◯</div>
      <a href="/blog" class="back-link">← Back to Blog</a>
    </footer>
  </article>

  <Footer />
</BaseLayout>

<style>
  .blog-post {
    max-width: 640px;
    margin: 0 auto;
    padding: 8rem 2rem 4rem;
  }

  /* Header */
  .post-header {
    margin-bottom: 3rem;
  }

  .back-link {
    font-size: 0.75rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--ink-faint);
    text-decoration: none;
    display: inline-block;
    margin-bottom: 2rem;
    transition: color 0.3s;
  }

  .back-link:hover {
    color: var(--ink);
  }

  .post-header time {
    display: block;
    font-size: 0.75rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--ink-faint);
    margin-bottom: 1rem;
  }

  h1 {
    font-family: 'Cormorant Garamond', serif;
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 300;
    letter-spacing: 0.02em;
    line-height: 1.25;
    color: var(--ink);
  }

  /* Content */
  .post-content {
    font-size: 1.05rem;
    line-height: 1.85;
    color: var(--ink-light);
  }

  /* Headings */
  .post-content :global(h2) {
    font-family: 'Cormorant Garamond', serif;
    font-size: 1.4rem;
    font-weight: 400;
    color: var(--ink);
    margin: 3rem 0 1.25rem;
  }

  .post-content :global(h3) {
    font-size: 1.1rem;
    font-weight: 400;
    color: var(--ink);
    margin: 2rem 0 1rem;
  }

  .post-content :global(h4) {
    font-size: 0.9rem;
    font-weight: 400;
    letter-spacing: 0.05em;
    color: var(--ink);
    margin: 1.5rem 0 0.75rem;
  }

  /* Paragraphs */
  .post-content :global(p) {
    margin-bottom: 1.5rem;
  }

  /* Links */
  .post-content :global(a) {
    color: var(--ink);
    text-decoration: underline;
    text-decoration-color: var(--ink-faint);
    text-underline-offset: 3px;
    transition: text-decoration-color 0.3s;
  }

  .post-content :global(a:hover) {
    text-decoration-color: var(--ink);
  }

  /* Strong */
  .post-content :global(strong) {
    font-weight: 400;
    color: var(--ink);
  }

  /* Blockquotes */
  .post-content :global(blockquote) {
    border-left: 1px solid var(--stone);
    padding-left: 1.5rem;
    margin: 2rem 0;
    color: var(--ink);
    font-style: italic;
  }

  .post-content :global(blockquote p) {
    margin-bottom: 0;
  }

  /* Lists */
  .post-content :global(ul),
  .post-content :global(ol) {
    margin: 1.5rem 0;
    padding-left: 1.25rem;
  }

  .post-content :global(li) {
    margin-bottom: 0.5rem;
  }

  .post-content :global(li::marker) {
    color: var(--ink-faint);
  }

  /* Code inline */
  .post-content :global(code) {
    font-family: 'SF Mono', 'Monaco', 'Consolas', monospace;
    font-size: 0.85em;
    background: var(--cream);
    padding: 0.1em 0.35em;
    border-radius: 3px;
  }

  /* Code blocks */
  .post-content :global(pre) {
    background: var(--code-bg);
    color: var(--code-text);
    padding: 1.25rem 1.5rem;
    margin: 2rem 0;
    overflow-x: auto;
    font-family: 'SF Mono', 'Monaco', 'Consolas', monospace;
    font-size: 0.85rem;
    line-height: 1.6;
  }

  .post-content :global(pre code) {
    background: none;
    padding: 0;
    font-size: inherit;
  }

  /* Horizontal rules */
  .post-content :global(hr) {
    border: none;
    text-align: center;
    margin: 3rem 0;
  }

  .post-content :global(hr)::before {
    content: '· · ·';
    color: var(--ink-faint);
    letter-spacing: 0.5em;
  }

  /* Post Footer */
  .post-footer {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid var(--stone);
    text-align: center;
  }

  .end-mark {
    font-size: 1.25rem;
    color: var(--ink-faint);
    opacity: 0.4;
    margin-bottom: 1.5rem;
  }

  .post-footer .back-link {
    margin-bottom: 0;
  }

  /* Responsive */
  @media (max-width: 480px) {
    .blog-post {
      padding: 6rem 1.25rem 3rem;
    }

    h1 {
      font-size: 1.5rem;
    }

    .post-content {
      font-size: 1rem;
    }

    .post-content :global(h2) {
      font-size: 1.25rem;
    }

    .post-content :global(pre) {
      padding: 1rem;
      margin-left: -1.25rem;
      margin-right: -1.25rem;
      border-radius: 0;
    }
  }
</style>
